<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF000000"
            android:textAlignment="center"
            android:textSize="30dp"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Configurações"
            android:textColor="#FF000000"
            android:textAlignment="center"
            android:textSize="30dp"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF000000"
            android:textAlignment="center"
            android:textSize="30dp"
            android:id="@+id/textBranco"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer Pomodoro"
            android:textColor="#FF000000"
            android:textSize="25dp"

            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:id="@+id/textTimerPomodoro" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextTimer"
            android:layout_marginLeft="100dp"
            android:textColor="#cfcfcf"
            android:text="25min"
            android:layout_gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intervalo curto"
            android:textColor="#FF000000"
            android:textSize="25dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:id="@+id/textIntCurto" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextIntCurto"
            android:layout_gravity="right"
            android:textColor="#cfcfcf"
            android:text="5min"
            android:layout_marginLeft="140dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intervalo longo"
            android:textColor="#FF000000"
            android:textSize="25dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:id="@+id/textIntLongo" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_gravity="right"
            android:layout_marginLeft="130dp"
            android:textColor="#cfcfcf"
            android:text="30min" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/btnSalvar"
        android:layout_gravity="center_horizontal" />

</LinearLayout>