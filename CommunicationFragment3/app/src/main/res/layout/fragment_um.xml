<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="#79DADF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fragmento Um"
        android:id="@+id/fragment_um"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mensagem"
        android:layout_below="@+id/fragment_um"
        android:layout_alignLeft="@+id/fragment_um"
        android:layout_alignStart="@+id/fragment_um"
        android:layout_alignRight="@+id/fragment_um"
        android:layout_alignEnd="@+id/fragment_um"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar "
        android:id="@+id/btn_enviar"
        android:layout_below="@+id/mensagem"
        android:layout_centerHorizontal="true" />
</RelativeLayout>